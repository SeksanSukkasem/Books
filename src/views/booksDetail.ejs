<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Book Rental Details</title>
    <style>
        /* Reset CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
        }

        header h1 {
            margin: 0;
        }

        nav ul {
            list-style: none;
            padding: 0;
            text-align: center;
            margin-top: 1rem;
        }

        nav ul li {
            display: inline;
            margin-right: 1rem;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
        }

        main {
            padding: 2rem;
        }

        .book-list {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .book-item {
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            width: 100%;
            max-width: 800px;
        }

        .book-item h2 {
            margin-bottom: 10px;
            font-size: 1.5rem;
            color: #333;
        }

        .book-item .details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .book-item .details p {
            margin: 0;
            color: #666;
        }

        .book-item .details p span {
            font-weight: bold;
            color: #333;
        }

        .book-item .price {
            font-size: 1.2rem;
            color: #000;
            font-weight: bold;
            margin-top: 20px;
        }

        .book-item img {
            max-width: 20%;
            height: auto;
            margin-bottom: 15px;
            border-radius: 5px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1rem;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #45a049;
        }

        footer {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        footer p {
            margin: 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>Online Book Rental Details</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <div class="book-list">
            <% dataBooks.forEach(book => { %>
                <div class="book-item" data-id="<%= book.id %>" data-title="<%= book.productTitle %>" data-price="<%= book.productPrice %>">
                    <img src="<%= book.image %>" alt="<%= book.productTitle %>">
                    <h2><%= book.productTitle %></h2>

                    <p><%= book.productDescription %></p><br>
                    <div class="details">
                        <p><span>Author:</span> <%= book.author %></p>
                        <p><span>Publisher:</span> <%= book.publisher %></p>
                        <p><span>Category:</span> <%= book.category %></p>
                        <p><span>Pages:</span> <%= book.pages %></p>
                        <p><span>Product Type:</span> <%= book.productType %></p>
                        <p><span>Size:</span> <%= book.size %></p>
                        <p><span>Weight:</span> <%= book.weight %></p>
                        <p><span>Barcode:</span> <%= book.barcode %></p>
                    </div>
                    <p class="price">Price: <%= book.productPrice %> บาท</p>
                    <button class="btn addToCart">Add to Cart</button>
                </div>
            <% }); %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 Online Book Rental</p>
    </footer>
</body>
<script>
    document.querySelectorAll('.btn').forEach(button => {
        button.addEventListener('click', function() {
            const productItem = this.closest('.book-item');
            const productId = productItem.getAttribute('data-id');
            const productTitle = productItem.querySelector('h2').innerText;
            const productPrice = productItem.querySelector('.price').innerText.split(' ')[1];

            const data = {
                product_id: productId,
                product_title: productTitle,
                product_price: productPrice
            };

            fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    console.error('Error:', data.error);
                } else {
                    console.log(data.message);
                    alert('Product added to cart successfully!');
                }
            })
            .catch(error => console.error('Error:', error));
        });
    });
</script>
</html>
