<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Online Book Rental Details</title>
        <link
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
            rel="stylesheet">
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
            rel="stylesheet">
        <style>
      body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.header {
    background-color: #333;
    color: #fff;
    padding: 1rem;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header h1,
.header h3 {
    margin: 0;
    font-size: 1.5rem;
}

nav ul {
    list-style: none;
    padding: 0;
    text-align: center;
    margin-top: 1rem;
}

nav ul li {
    display: inline;
    margin-right: 1rem;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s;
}

nav ul li a:hover {
    color: #ddd;
}

main {
    padding: 2rem;
    margin-top: 80px; /* Adjusted to prevent overlap with fixed header */
}

.book-item,
.random-product {
    background: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.book-item h2,
.product-item h2 {
    margin-bottom: 10px;
    font-size: 1.5rem;
    color: #333;
}

.book-item .details p,
.product-item .details p {
    margin: 0;
    color: #666;
}

.book-item .details p span,
.product-item .details p span {
    font-weight: bold;
    color: #333;
}

.book-item .price,
.product-item .price {
    font-size: 1.2rem;
    color: #000;
    font-weight: bold;
    margin-top: 20px;
}

.book-item img,
.product-item img {
    max-width: 100%;
    height: auto;
    margin-bottom: 15px;
    border-radius: 5px;
}

.btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s;
}

.btn:hover {
    background-color: #45a049;
}

footer {
    background-color: #333;
    color: #fff;
    padding: 1rem;
    text-align: center;
    margin-top: 20px;
}

footer p {
    margin: 0;
}

.btn-back {
    background-color: #333;
    margin-bottom: 20px;
}

.cart-count {
    font-size: 1rem;
    font-weight: bold;
    color: #fff;
    background-color: #007bff;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-left: 5px;
}

.discount-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: red;
    color: white;
    padding: 5px;
    font-size: 0.9rem;
    border-radius: 5px;
}

.product-item {
    position: relative;
    background-color: #fff;
    padding: 1rem;
    margin-bottom: 1rem;
    width: 100%;
    max-width: 200px;
}

.product-item h2 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
}

.product-item h2 a {
    text-decoration: none;
    color: rgb(88, 86, 86);
    font-size: medium;
}

.product-item .btn {
    padding: 0.5rem 1rem;
    background-color: #28a745;
    color: #fff;
    transition: background-color 0.3s;
}

.product-item .btn:hover {
    background-color: #218838;
}

.random-products-carousel {
    margin-top: 2rem;
    padding: 1rem;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
}

.random-products {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
}

.product-item {
    background-color: #fff;
    padding: 1rem;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    width: calc(25% - 1rem);
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
}

.product-item img {
    max-width: 100%;
    height: auto;
    margin-bottom: 0.5rem;
    border-radius: 5px;
}

.product-item h2 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
}

.product-item p {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

.product-item .price {
    font-size: 1.1rem;
    color: #000;
    font-weight: bold;
    margin: 0.5rem 0;
}

.product-item .btn {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    font-size: 0.9rem;
    background-color: #28a745;
    color: #fff;
    transition: background-color 0.3s;
}

.product-item .btn:hover {
    background-color: #218838;
}

.discount-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: red;
    color: white;
    padding: 5px;
    font-size: 0.9rem;
    border-radius: 5px;
}

@media (max-width: 1200px) {
    .product-item {
        width: calc(33.33% - 1rem);
    }
}

@media (max-width: 992px) {
    .product-item {
        width: calc(50% - 1rem);
    }
}

@media (max-width: 768px) {
    .product-item {
        width: calc(100% - 1rem);
    }
}

    </style>
    </head>

    <body>
        <header class="header">
            <div class="container">
                <div class="header-content">
                    <h3 class="site-title">Online Book Details</h3>
                    <nav class="navbar navbar-expand-lg navbar-dark">
                        <button class="navbar-toggler" type="button"
                            data-toggle="collapse" data-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div
                            class="collapse navbar-collapse justify-content-center"
                            id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item"><a class="nav-link"
                                        href="/">Home</a></li>
                                <li class="nav-item"><a class="nav-link"
                                        href="/about">About Us</a></li>
                                <li class="nav-item"><a class="nav-link"
                                        href="/contact">Contact</a></li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/market">Market
                                        <span class="cart-count"
                                            id="cart-count">0</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <section class="container mt-3">
            <button onclick="history.back()"
                class="btn btn-secondary btn-back">Back</button>
        </section>
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-15">
                        <% dataBooks.forEach(book => { %>
                        <div class="book-item" data-id="<%= book.id %>">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <img src="<%= book.image %>"
                                        alt="<%= book.productTitle %>">
                                </div>
                                <div class="col-md-8">
                                    <h2><%= book.productTitle %></h2>
                                    <div class="description">
                                        <p class="short-description"
                                            data-toggle="collapse"
                                            data-target="#collapseDescription<%= book.id %>">
                                            <%=
                                            book.productDescription.substring(0,
                                            100) %>...
                                            <i class="fas fa-chevron-down"></i>
                                        </p>
                                        <div
                                            id="collapseDescription<%= book.id %>"
                                            class="collapse">
                                            <p><%= book.productDescription
                                                %></p>
                                        </div>
                                    </div>
                                    <div class="details row">
                                        <p class="col-md-6"><span>Author:</span>
                                            <%= book.author %></p>
                                        <p
                                            class="col-md-6"><span>Publisher:</span>
                                            <%= book.publisher %></p>
                                        <p
                                            class="col-md-6"><span>Category:</span>
                                            <%= book.category %></p>
                                        <p class="col-md-6"><span>Pages:</span>
                                            <%= book.pages %> หน้า</p>
                                        <p class="col-md-6"><span>Product
                                                Type:</span> <%=
                                            book.productType %></p>
                                        <p class="col-md-6"><span>Size:</span>
                                            <%= book.size %></p>
                                        <p class="col-md-6"><span>Weight:</span>
                                            <%= book.weight %></p>
                                        <p
                                            class="col-md-6"><span>Barcode:</span>
                                            <%= book.barcode %></p>
                                        <p
                                            class="col-md-6"><span>Discount:</span>
                                            <%= book.discount %>%</p>
                                    </div><br>
                                    <% const discountedPrice = book.productPrice
                                    - (book.productPrice * book.discount / 100);
                                    %>
                                    <strong class="discountedPrice">Price: <%=
                                        discountedPrice.toFixed(2) %>
                                        บาท</strong><br>
                                    <button class="btn addToCart">Add to
                                        Cart</button> (จาก <%= book.productPrice
                                    %> บาท)
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="random-products-carousel">
                        <div class="row product-list random-products">
                            <% productrandom.forEach(product => { %>
                            <div class="col-sm-6 col-md-4 col-lg-3 product-item"
                                data-id="<%= product.id %>"
                                data-title="<%= product.productTitle %>"
                                data-price="<%= product.productPrice %>"
                                data-category="<%= product.category %>">
                                <% if (product.discount > 0) { %>
                                <div class="discount-badge">ลด <%=
                                    product.discount %>%</div>
                                <% } %>
                                <img class="random-product"
                                    src="<%= product.image %>"
                                    alt="<%= product.productTitle %>">
                                <h2><a
                                        href="/books/<%= product.productTitle %>"><strong><%=
                                            product.productTitle
                                            %></strong></a></h2>
                                <p><%= product.author %></p>
                                <% const randomDiscountedPrice =
                                product.productPrice - (product.productPrice *
                                product.discount / 100); %>
                                <div class="price"><%= randomDiscountedPrice %>
                                    บาท</div>
                                <button class="btn addToCart">Add to
                                    Cart</button>
                            </div>
                            <% }); %>
                        </div>
                    </div>

                </div>
            </div>
        </main>
        <footer>
            <p>&copy; 2024 Online Book Rental</p>
        </footer>
        <script
            src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
        <script
            src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script>
 function handleAddToCartBook(event) {
        const button = event.currentTarget;
        const productItem = button.closest('.book-item');
        const productId = productItem.getAttribute('data-id');
        const productTitle = productItem.querySelector('h2').innerText;
        const priceText = productItem.querySelector('.discountedPrice').innerText;
        const productPrice = parseFloat(priceText.replace('Price: ', '').replace(' บาท', ''));

        // Debugging: Log the data to be sent
        console.log('Sending book data:', {
            product_id: productId,
            product_title: productTitle,
            product_price: productPrice
        });

        const data = {
            product_id: productId,
            product_title: productTitle,
            product_price: productPrice
        };

        fetch('/addToCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                console.error('Error:', data.error);
            } else {
                console.log(data.message);
                document.getElementById('cart-count').innerText = data.totalQuantity;
            }
        })
        .catch(error => console.error('Error:', error));
    }

    function handleAddToCartProduct(event) {
        const button = event.currentTarget;
        const productItem = button.closest('.product-item');
        const productId = productItem.getAttribute('data-id');
        const productTitle = productItem.getAttribute('data-title');
        const priceText = productItem.querySelector('.price').innerText;
        const productPrice = parseFloat(priceText.replace(' บาท', '').replace(',', ''));

        // Debugging: Log the data to be sent
        console.log('Sending product data:', {
            product_id: productId,
            product_title: productTitle,
            product_price: productPrice
        });

        const data = {
            product_id: productId,
            product_title: productTitle,
            product_price: productPrice
        };

        fetch('/addToCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(data => {
            if (data.error) {
                console.error('Error:', data.error);
            } else {
                console.log(data.message);
                document.getElementById('cart-count').innerText = data.totalQuantity;
            }
        })
        .catch(error => console.error('Error:', error));
    }

    // Attach event listeners to 'Add to Cart' buttons for books
    document.querySelectorAll('.book-item .btn.addToCart').forEach(button => {
        button.addEventListener('click', handleAddToCartBook);
    });

    // Attach event listeners to 'Add to Cart' buttons for random products
    document.querySelectorAll('.product-item .btn.addToCart').forEach(button => {
        button.addEventListener('click', handleAddToCartProduct);
    });

    // Fetch and update the cart count on page load
    fetch('/market/count')
        .then(response => response.json())
        .then(data => {
            document.getElementById('cart-count').innerText = data.totalQuantity;
        })
        .catch(error => console.error('Error fetching cart count:', error));
        </script>
    </body>

</html>
