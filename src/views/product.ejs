<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Book Rental</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .site-title {
            margin: 0;
            font-size: 1.5rem;
        }

        .navbar-nav {
            display: flex;
            align-items: center;
        }

        .nav-link {
            color: #fff !important;
            margin: 0 1rem;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: #ddd !important;
        }

        .main-content {
            display: flex;
            margin-top: 100px;
            padding: 20px;
        }

        .sidebar {
            width: 20%;
            background-color: #fff;
            padding: 1rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-right: 1rem;
            position: fixed;
        }

        .content {
            width: 80%;
            padding: 1rem;
            margin-left: 22%;
        }

        .category-list {
            list-style: none;
            padding: 0;
        }

        .category-list li {
            margin-bottom: 0.5rem;
        }

        .category-list li a {
            text-decoration: none;
            color: #333;
        }

        .category-list li a:hover {
            text-decoration: underline;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: flex-start;
            margin-top: 20px;
        }

        .product-item {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background-color: #fff;
            padding: 1rem;
            margin-bottom: 1rem;
            width: 100%;
            max-width: 200px;
            position: relative;
        }

        .product-item img {
            max-width: 100%;
            height: auto;
            margin-bottom: 0.5rem;
        }

        .product-item h2 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .product-item h2 a {
            text-decoration: none;
            color: rgb(88, 86, 86);
            font-size: medium;
        }

        .product-item .btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 0.9rem;
            background-color: #28a745;
            color: #fff;
            transition: background-color 0.3s;
        }

        .product-item .btn:hover {
            background-color: #218838;
        }

        .product-item .price {
            font-size: 1.1rem;
            font-weight: bold;
            color: #333;
            margin-top: 0.5rem;
        }

        .product-item .original-price {
            font-size: 0.9rem;
            color: #777;
            text-decoration: line-through;
            margin-left: 5px;
        }

        .carousel-item {
            text-align: center;
        }

        .carousel-item .product-item {
            margin: 0 auto;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
        }

        .carousel-item img {
            width: 900px;
            height: 400px;
            object-fit: cover;
            border: none;
            box-shadow: none;
        }

        .image-ns-item {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
            text-align: center;
            margin-bottom: 1rem;
        }

        .cart-count {
            font-size: 1rem;
            font-weight: bold;
            color: #fff;
            background-color: #007bff;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-left: 5px;
        }

        .top-rank {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #ff5733;
            color: #fff;
            padding: 0.2rem 0.5rem;
            border-radius: 5px;
            font-size: 0.9rem;
        }

        .discount-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: red;
            color: white;
            padding: 5px;
            font-size: 0.9rem;
            border-radius: 5px;
        }

        footer {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
            margin-top: 2rem;
        }
    </style>
</head>

<body>
    <header class="header">
        <div class="container">
            <div class="header-content">
                <h3 class="site-title">Online Book Rental</h3>
                <nav class="navbar navbar-expand-lg navbar-dark">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
                            <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
                            <li class="nav-item"><a class="nav-link" href="/user">User</a></li>
                            <li class="nav-item">
                                <a class="nav-link" href="/market">Market
                                    <span class="cart-count" id="cart-count">0</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <div class="main-content">
        <aside class="sidebar">
            <h5>หมวดหมู่</h5>
            <ul class="category-list">
                <li><a href="#" data-category="all">All Categories</a></li>
                <% categories.forEach(category => { %>
                <li><a href="#" data-category="<%= category.category %>"><%= category.category %></a></li>
                <% }); %>
            </ul>
        </aside>
        <main class="content">
            <div id="newBooksCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% newBooks.forEach((book, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <div class="d-flex justify-content-center">
                            <div class="image-ns-item">
                                <img class="image-ns" src="<%= book.image %>" alt="Book Image">
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <a class="carousel-control-prev" href="#newBooksCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#newBooksCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <h3>Best Selling Books</h3>
            <div class="row product-list best-selling-books">
                <% bestSelling.forEach((book, index) => { %>
                <div class="col-sm-6 col-md-4 col-lg-3 product-item" data-id="<%= book.id %>"
                    data-title="<%= book.productTitle %>" data-price="<%= book.productPrice %>"
                    data-category="<%= book.category %>">
                    <span class="top-rank">TOP <%= index + 1 %></span>
                    <img src="<%= book.image %>" alt="<%= book.productTitle %>">
                    <h2><a href="/books/<%= book.productTitle %>"><strong><%= book.productTitle %></strong></a></h2>
                </div>
                <% }); %>
            </div>

            <h3>All Books</h3>
            <div class="row product-list all-books">
                <% product.forEach(products => { %>
                <div class="col-sm-6 col-md-4 col-lg-3 product-item" data-id="<%= products.id %>"
                    data-title="<%= products.productTitle %>" data-price="<%= products.productPrice %>"
                    data-category="<%= products.category %>">
                    
                    <% if (products.discount > 0) { %>
                    <div class="discount-badge">ลด <%= products.discount %>%</div>
                    <% } %>
                    <a href="/books/<%= products.productTitle %>">
                        <img src="<%= products.image %>" alt="<%= products.productTitle %>">
                    </a>
                    <!-- <img src="<%= products.image %>" alt="<%= products.productTitle %>"> -->
                    <h2><a href="/books/<%= products.productTitle %>"><strong><%= products.productTitle %></strong></a></h2>
                    <p><%= products.author %></p>
                    <div class="price">
                        <% const discountedPrice = products.productPrice - (products.productPrice * products.discount / 100); %>
                        <%= discountedPrice.toFixed(2) %> บาท
                        <% if (products.discount > 0) { %> <br>
                        <span class="original-price">(จาก <%= products.productPrice %> บาท)</span>
                        <% } %>
                    </div>
                    <button class="btn addToCart">Add to Cart</button>
                </div>
                <% }); %>
            </div>
            <% categories.forEach(category => { %>
            <div class="category-section" data-category="<%= category.category %>" style="display: none;">
                <h4><%= category.category %></h4>
                <div class="row product-list">
                    <% product.filter(p => p.category.includes(category.category)).forEach(products => { %>
                    <div class="col-sm-6 col-md-4 col-lg-3 product-item" data-id="<%= products.id %>"
                        data-title="<%= products.productTitle %>" data-price="<%= products.productPrice %>"
                        data-category="<%= products.category %>">
                        <% if (products.discount > 0) { %>
                        <div class="discount-badge">ลด <%= products.discount %>%</div>
                        <% } %>
                        <img src="<%= products.image %>" alt="<%= products.productTitle %>">
                        <h2><a href="/books/<%= products.productTitle %>"><strong><%= products.productTitle %></strong></a></h2>
                        <p><%= products.author %></p>
                        <div class="price">
                            <% const discountedPrice = products.productPrice - (products.productPrice * products.discount / 100); %>
                            <%= discountedPrice.toFixed(2) %> บาท
                            <% if (products.discount > 0) { %>
                            <span class="original-price">(จาก <%= products.productPrice %> บาท)</span>
                            <% } %>
                        </div>
                        <button class="btn addToCart">Add to Cart</button>
                    </div>
                    <% }); %>
                </div>
            </div>
            <% }); %>
        </main>
    </div>
    <footer>
        <p>&copy; 2024 Online Book Rental</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.querySelectorAll('.btn.addToCart').forEach(button => {
            button.addEventListener('click', function () {
                const productItem = this.closest('.product-item');
                const productId = productItem.getAttribute('data-id');
                const productTitle = productItem.querySelector('h2 a').innerText;
                const productPrice = productItem.querySelector('.price').innerText.split(' ')[0];

                const data = {
                    product_id: productId,
                    product_title: productTitle,
                    product_price: productPrice
                };

                fetch('/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            console.error('Error:', data.error);
                        } else {
                            console.log(data.message);
                            document.getElementById('cart-count').innerText = data.totalQuantity;
                        }
                    })
                    .catch(error => console.error('Error:', error));
            });
        });

        // Fetch and update the cart count on page load
        fetch('/market/count')
            .then(response => response.json())
            .then(data => {
                document.getElementById('cart-count').innerText = data.totalQuantity;
            })
            .catch(error => console.error('Error fetching cart count:', error));

        // Filter products based on category
        document.querySelectorAll('.category-list a').forEach(categoryLink => {
            categoryLink.addEventListener('click', function (event) {
                event.preventDefault();
                const selectedCategory = this.getAttribute('data-category').toLowerCase();
                document.querySelectorAll('.category-section').forEach(section => {
                    const sectionCategory = section.getAttribute('data-category').toLowerCase();
                    if (sectionCategory.includes(selectedCategory)) {
                        section.style.display = '';
                    } else {
                        section.style.display = 'none';
                    }
                });
                if (selectedCategory === 'all') {
                    document.querySelector('.all-books').style.display = '';
                } else {
                    document.querySelector('.all-books').style.display = 'none';
                }
            });
        });
    </script>
</body>

</html>
