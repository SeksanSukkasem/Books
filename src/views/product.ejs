<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Online Book Rental</title>
        <link
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
            rel="stylesheet">
        <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .header,
        footer {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
        }

        .header h1 {
            margin: 0;
        }

        .nav-link {
            color: #fff !important;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
            margin-top: 20px;
        }

        .product-item {
            background-color: #fff;
            border: 1px solid #ccc;
            padding: 1rem;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
            margin-bottom: 1rem;
            width: 100%;
            max-width: 200px;
        }

        .product-item img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 0.5rem;
        }

        .product-item h2 {
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .product-item h2 a {
            text-decoration: none;
            color: black;
        }

        .product-item .btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 0.9rem;
            margin: 0.5rem 0;
            background-color: #28a745;
            color: #fff;
            transition: background-color 0.3s;
        }

        .product-item .btn:hover {
            background-color: #218838;
        }

        .product-item .price {
            font-size: 1.1rem;
            font-weight: bold;
            color: #333;
            margin-top: 0.5rem;
        }

        footer {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
            margin-top: 2rem;
        }

        .navbar {
            margin-bottom: 20px;
        }
    </style>
    </head>

    <body>
        <header class="header">
            <h1>Online Book Rental</h1>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <button class="navbar-toggler" type="button"
                    data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center"
                    id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link"
                                href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link"
                                href="/about">About Us</a></li>
                        <li class="nav-item"><a class="nav-link"
                                href="/contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link"
                                href="/market">Market</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <main class="container my-4">
            <div class="row product-list">
                <% product.forEach(products => { %>
                <div class="col-sm-6 col-md-4 col-lg-3 product-item"
                    data-id="<%= products.id %>"
                    data-title="<%= products.productTitle %>"
                    data-price="<%= products.productPrice %>">
                    <img src="<%= products.image %>"
                        alt="<%= products.productTitle %>">
                    <h2><a href="/books/<%= products.productTitle %>"><%=
                            products.productTitle %></a></h2>
                    <div class="price"><%= products.productPrice %> บาท</div>
                    <button class="btn addToCart">Add to Cart</button>
                </div>
                <% }); %>
            </div>
        </main>
        <footer class="text-center">
            <p>&copy; 2024 Online Book Rental</p>
        </footer>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
        <script
            src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script>
        document.querySelectorAll('.btn.addToCart').forEach(button => {
            button.addEventListener('click', function () {
                const productItem = this.closest('.product-item');
                const productId = productItem.getAttribute('data-id');
                const productTitle = productItem.querySelector('h2 a').innerText;
                const productPrice = productItem.querySelector('.price').innerText.split(' ')[0];

                const data = {
                    product_id: productId,
                    product_title: productTitle,
                    product_price: productPrice
                };

                fetch('/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            console.error('Error:', data.error);
                        } else {
                            console.log(data.message);
                            alert('Product added to cart successfully!');
                        }
                    })
                    .catch(error => console.error('Error:', error));
            });
        });
    </script>
    </body>

</html>
