<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Book Rental</title>
    <style>
        /* Reset CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f4f4f4;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
        }

        nav ul {
            list-style: none;
            padding: 0;
            text-align: center;
            margin: 1rem 0;
        }

        nav ul li {
            display: inline;
            margin-right: 1rem;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
        }

        main {
            padding: 2rem;
        }

        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
        }
        .product-list a{
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
            text-decoration: none;
            color: black;
        }
        .product-item {
            background-color: #fff;
            border: 1px solid #ccc;
            padding: 1rem;
            border-radius: 5px;
            width: 15%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            position: relative;
        }

        .product-item img {
            max-width: 20vh;
            height: auto;
            border-radius: 5px;
            margin-bottom: 1rem;
        }

        .product-item h2 {
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .product-item p {
            margin: 0.5rem 0;
        }

        .product-item .btn {
            display: inline-block;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 0.8rem;
            margin: 0.5rem 0;
            background-color: #4CAF50;
            color: #fff;
        }

        .product-item .price {
            font-size: 1rem;
            font-weight: bold;
            color: #333;
            margin-top: 0.5rem;
        }

        footer {
            background-color: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
            margin-top: 2rem;
        }
    </style>
    <script>
        function addToCart(id, productTitle, productPrice) {
            fetch('/addToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id, productTitle, productPrice })
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>
</head>
<body>
    <header>
        <h1>Online Book Rental</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/market">Market</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <div class="product-list">
            <% product.forEach(products => { %>
                <div class="product-item">
                    <img src="<%= products.image %>" alt="<%= products.productTitle %>">
                    <h2><a href="/books/<%= products.productTitle %>"><%= products.productTitle %></a></h2>
                    <div class="price"><%= products.productPrice %> บาท</div>
                    <button class="btn" onclick="addToCart('<%= products.id %>', '<%= products.productTitle %>', '<%= products.productPrice %>')">Add to Cart</button>
                </div>
            <% }); %>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 Online Book Rental</p>
    </footer>
</body>
</html>
